<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vaibhav.musicapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity
            android:name=".welcome_screen_1"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".welcome_screen_2"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".welcome_screen_3"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".SongList">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.vaibhav.musicapp.MainActivity" />
        </activity>
        <activity android:name=".about_the_app">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.vaibhav.musicapp.MainActivity" />
        </activity>
        <activity android:name=".open_source">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.vaibhav.musicapp.about_the_app" />
        </activity>
        <activity android:name=".song_play">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.vaibhav.musicapp.SongList" />
        </activity>
        <activity android:name=".payment">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.vaibhav.musicapp.MainActivity" />
        </activity>
    </application>

</manifest>