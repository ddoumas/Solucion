<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Styles for Welcome Screen 1-->
    <style name="WelcomeScreenTitleText" parent="WelcomeScreenContentText">
        <item name="android:textSize">@dimen/text_size_45sp</item>
        <item name="android:textColor">@color/indigo_500</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WelcomeScreenContentText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_28sp</item>
    </style>

    <style name="FormTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="FormEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textAutoComplete</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="PasswordEditText" parent="FormEditText">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="ContinueEditText" parent="ContinueImageEditText">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_24sp</item>
    </style>

    <style name="ContinueImageEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_height_60dp</item>
        <item name="android:background">@color/indigo_500</item>
        <item name="android:gravity">center</item>
        <item name="android:src">@drawable/ic_done_black_36dp</item>
        <item name="android:tint">@color/white</item>
    </style>

    <!--Style for MainActivity-->

    <style name="BannerProfileName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/padding_left_16dp</item>
        <item name="android:paddingTop">@dimen/padding_top_16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BannerAlbumName" parent="BannerProfileName">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BannerTotalAlbums" parent="BannerProfileName">
        <item name="android:paddingTop">@dimen/padding_top_8dp</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="AlbumArt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_height_140dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:contentDescription">@string/content_description_album_art</item>
    </style>

    <style name="AlbumName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">@dimen/padding_top_16dp</item>
        <item name="android:paddingLeft">@dimen/padding_left_12dp</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
    </style>

    <style name="AlbumContent" parent="AlbumName">
        <item name="android:paddingTop">@dimen/padding_top_4dp</item>
        <item name="android:paddingBottom">@dimen/padding_bottom_8dp</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="BottomPlayBarAlbumArt">
        <item name="android:layout_width">@dimen/layout_width_70dp</item>
        <item name="android:layout_height">@dimen/layout_height_70dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:contentDescription">@string/content_description_album_art</item>
        <item name="android:src">@drawable/album_art_4</item>
    </style>

    <style name="BottomPlayBarSongName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/padding_left_16dp</item>
        <item name="android:paddingTop">@dimen/padding_top_8dp</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
    </style>

    <style name="BottomPlayBarSongReleaseCompany" parent="BottomPlayBarSongName">
        <item name="android:paddingTop">@dimen/padding_top_4dp</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="BottomPlayBarPlayButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/padding_16dp</item>
        <item name="android:contentDescription">@string/content_description_button</item>
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <!--Style for Songlist activity-->

    <style name="PlayButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin_16dp</item>
        <item name="android:contentDescription">@string/content_description_button</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginTop">@dimen/margin_top_150dp</item>
        <item name="android:scaleX">1.2</item>
        <item name="android:scaleY">1.2</item>
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <style name="SongNumber">
        <item name="android:layout_width">@dimen/layout_width_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SongName" parent="SongNumber" />

    <style name="SongTime" parent="SongNumber">
        <item name="android:textColor">@color/grey_400</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MoreSettings">
        <item name="android:layout_width">@dimen/layout_width_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">@color/white</item>
    </style>
    <!--Style for About The app screen-->
    <style name="AppIcon">
        <item name="android:layout_width">@dimen/layout_width_200dp</item>
        <item name="android:layout_height">@dimen/layout_height_200dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/margin_top_50dp</item>
    </style>

    <style name="AppName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_45sp</item>
        <item name="android:layout_marginTop">@dimen/margin_top_8dp</item>
    </style>

    <style name="AppVersion" parent="AppName">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DevlopedBy">
        <item name="android:layout_width">@dimen/layout_width_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin_end_4dp</item>
        <item name="android:gravity">end</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="DevloperName">
        <item name="android:layout_width">@dimen/layout_width_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="OpenSource">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/padding_16dp</item>
        <item name="android:textColor">@color/indigo_500</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
    </style>
    <!--Style for Opensource screen-->
    <style name="OpenSourceLibraryName" parent="OpenSourceLibraryLink">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textSize">@dimen/text_size_24sp</item>
    </style>

    <style name="OpenSourceLibraryLink">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top_8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">@dimen/padding_left_16dp</item>
        <item name="android:paddingTop">@dimen/padding_top_8dp</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="OpenSourceLibraryDescription" parent="OpenSourceLibraryLink">
        <item name="android:clickable">false</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <!--Style for Playing Song screen-->
    <style name="PlayingScreenButtons">
        <item name="android:layout_width">@dimen/layout_width_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_16dp</item>
    </style>
</resources>
