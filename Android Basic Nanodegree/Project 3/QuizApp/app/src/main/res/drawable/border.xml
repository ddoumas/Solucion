<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    android:thickness="@dimen/thickness_1dp">
    <!--Setting background color-->
    <solid android:color="#fff"></solid>
    <stroke
        android:width="@dimen/width_2dp"
        android:color="#000"></stroke>
    <padding
        android:bottom="@dimen/padding_bottom_4dp"
        android:left="@dimen/padding_left_4dp"
        android:right="@dimen/padding_right_4dp"
        android:top="@dimen/margin_top_8dp"></padding>
    <corners android:radius="@dimen/radius_10dp"></corners>
</shape>